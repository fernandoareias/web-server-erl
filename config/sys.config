[
    {web_server, [
        %% Configurações do servidor
        {port, 8091},                % Porta do servidor
        {backlog, 128},              % Tamanho máximo da fila de conexões pendentes
        {timeout, 30000},            % Timeout padrão (30 segundos)
        
        %% Configurações de performance
        {max_connections, 1024},     % Número máximo de conexões simultâneas
        {acceptors_pool_size, 100},  % Tamanho do pool de acceptors
        
        %% Configurações de cache
        {cache_enabled, true},       % Habilita cache de arquivos estáticos
        {cache_max_size, 1000},      % Número máximo de itens em cache
        {cache_ttl, 3600},          % Tempo de vida do cache em segundos
        
        %% Configurações de log
        {log_level, debug},          % Nível de log (debug, info, warning, error)
        {access_log_enabled, true}, % Habilita log de acesso
        
        %% Configurações de SSL/TLS
        {ssl_enabled, false},       % Habilita HTTPS
        {ssl_port, 8443},          % Porta HTTPS
        {ssl_certfile, "priv/ssl/cert.pem"},
        {ssl_keyfile, "priv/ssl/key.pem"},
        
        %% Configurações de compressão
        {compression_enabled, true}, % Habilita compressão gzip
        {compression_level, 6},      % Nível de compressão (1-9)
        
        %% Configurações de diretório
        {document_root, "priv/www"},    % Diretório raiz para arquivos estáticos
        {temp_dir, "priv/temp"},        % Diretório temporário
        {http_port, 8091},
        {static_files_path, "priv/static"},
        {templates_path, "priv/templates"}
    ]},
  
    {sasl, [
        {sasl_error_logger, {file, "logs/sasl.log"}},
        {errlog_type, error},
        {error_logger_mf_dir, "logs/sasl"},
        {error_logger_mf_maxbytes, 10485760},  % 10 MB max file size
        {error_logger_mf_maxfiles, 5}          % 5 files max
    ]},
  
    {kernel, [
        {logger_level, debug},
        {logger, [
            {handler, default, logger_std_h, #{
                level => debug,
                formatter => {logger_formatter, #{
                    single_line => false,
                    time_offset => "",
                    template => [time, " ", level, ": ", msg, "\n"]
                }}
            }}
        ]}
    ]}
]. 