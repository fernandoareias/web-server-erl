{erl_opts, [debug_info]}.

{deps, [
    {meck, "0.9.2"}
]}.

{shell, [
    {config, "config/sys.config"},
    {apps, [web_server]}
]}.

{relx, [
    {release, {web_server, "1.0.0"}, [web_server]},
    {dev_mode, true},
    {include_erts, false},
    {extended_start_script, true},
    {sys_config, "config/sys.config"}
]}.

{profiles, [
  {prod, [
    {relx, [
      {release, {web_server, "1.0.0"}, [web_server]},  
      {dev_mode, false},
      {include_erts, true},
      {extended_start_script, true},
      {sys_config, "config/sys.config"}
    ]}
  ]}
]}.

{alias, [
    {start_server, [compile, shell]}
]}.

{project_app_dirs, ["apps/*"]}.